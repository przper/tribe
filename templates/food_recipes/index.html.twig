{% extends "base.html.twig" %}

{% block body %}
    <div>
        <h1>Our tasty recipes:</h1>

        <div><a href="{{ path('recipe_create') }}">Add new</a></div>

        <div>
            {% for recipe in recipes %}
                <ol>
                    <li>
                        {{ recipe.name }}
                        <a href="{{ path('recipe_detail', {id: recipe.id}) }}">Show</a>
                    </li>
                </ol>
            {% else %}
                <div>List is empty :( Add something!</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}