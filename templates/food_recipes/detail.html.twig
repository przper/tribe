{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <h1>{{ recipe.name }}</h1>

        <div>
            <ol>
                {% for ingredient in recipe.ingredients %}
                    <li><p>{{ ingredient }}</p></li>
                {% else %}}
                    <div><p>No ingredients :( </p></div>
                {% endfor %}
            </ol>
        </div>
    </div>
    
{% endblock %}