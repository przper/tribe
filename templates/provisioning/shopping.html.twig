{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <h1>Shopping</h1>

        <ul>
            {% for item in list.items %}
                <li>{{ item.name }} - {{ item.quantity }}[{{ item.unit }}] - {{ item.status.name }}</li>
            {% else %}
                <p>the list is empty!</p>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

